{
  "spec": "src/resources/test-cases/**/*.spec.js",
  "timeout": 60000,
  "require": ["src/core/factories/runner.js", "mochawesome/register"],
  "reporter": "mochawesome",
  "retries": 0,
  "parallel": false,
  "jobs": 5,
  "reporter-option": [
    "reportFilename=automation_report",
    "timestamp=mm/dd/yyyy",
    "charts=true",
    "autoOpen=true",
    "overwrite=true",
    "code=false",
    "reportDir=results",
    "reportPageTitle=Automation report"
  ]
}
